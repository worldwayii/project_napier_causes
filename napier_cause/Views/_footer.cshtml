<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Napier Causes</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>

    <!-- banner -->
    <div class="banner" id="home">
        <!-- agileinfo-dot -->
        <div class="agileinfo-dot">
            <div class="head">
                <div class="navbar-top">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Napier Cause", "Index", "Home", new { area = "" }, new { @class = "site-name" })

                    </div>
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav link-effect-4">
                            <li class="active">@Html.ActionLink("Home", "Index", "Home") </li>
                            <li><a href="#About" class="scroll">About </a> </li>
                            <li><a href="#features" class="scroll">Causes </a> </li>
                            <li><a href="#team" class="scroll">Contact</a></li>
                            @Html.Partial("_LoginPartial")
                        </ul>
                    </div>
                    <!-- /.navbar-collapse -->
                </div>
            </div>

            @RenderBody()
            <div class="footer">
                <div class="container">
                    <div class="agileinfo_footer_bottom">
                        <div class="col-md-6 agileinfo_footer_bottom_grid">
                            <h6>Links</h6>
                            <ul class="tag2 tag_agileinfo">
                                <li><a href="#home" class="scroll">Home</a></li>
                                <li><a href="#about" class="scroll">About</a></li>
                                <li><a href="#features" class="scroll">Features</a></li>
                                <li><a href="#team" class="scroll">Team</a></li>
                                <li><a href="#news" class="scroll">News</a></li>
                                <li><a href="#contact" class="scroll">Contact</a></li>
                            </ul>
                        </div>
                        <div class="col-md-6 agileinfo_footer_bottom_grid">
                            <h6>Follow Us</h6>
                            <div class="w3l-social">
                                <ul>
                                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="#"><i class="fa fa-rss"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                    <div class="agileinfo_footer_bottom1">

                        <p>© 2017 Napier Cause. All rights reserved | Design by <a href="http://www.facebook.com/wayii">Chucks Elui</a></p>
                    </div>
                </div>
            </div>


            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @Scripts.Render("~/Scripts/scroll");
            @Scripts.Render("~/Scripts/responsive");
            @Scripts.Render("~/Scripts/smooth");
            @Scripts.Render("~/Scripts/easing");
            @Scripts.Render("~/Scripts/jar");
            @Scripts.Render("~/Scripts/move");
            @Scripts.Render("~/Scripts/bars");
            @Scripts.Render("~/Scripts/custom");
            @RenderSection("scripts", required: false)
</body>
</html>


